{$HOST} {
    tls off

    root /webapp

    rewrite / {
      if {path} not_match ^/api
      to {path} /
    }

    proxy /api/routing unweaver:5656 {
        without /api/routing
        transparent
        header_downstream Host {host}
        header_downstream X-Real-IP {remote}
        header_downstream X-Forwarded-Proto {scheme}
    }

    proxy /api/routing_streets unweaver_streets:5657 {
        without /api/routing_streets
        transparent
        header_downstream Host {host}
        header_downstream X-Real-IP {remote}
        header_downstream X-Forwarded-Proto {scheme}
    }

    gzip
    log stdout
    errors stderr
}

{$HOST}/tiles {
    tls off

    root /tiles

    header / {
        Access-Control-Allow-Origin *
        Content-Type application/vnd.mapbox-vector-tile
        Content-Encoding gzip
    }

    header /tilejson {
        Content-Type text/plain
        -Content-Encoding
    }

    header /nocontent {
        -Content-Type
        -Content-Encoding
    }

    status 204 /nocontent

    rewrite {
      to {rewrite_path} /nocontent
    }

    # Log to places that journalctl will find
    log / stdout "{remote} - {user} [{when}] \"{method} {uri} {proto}\" {status} {size} - {path} -> {rewrite_path}"
    # errors stderr
}
